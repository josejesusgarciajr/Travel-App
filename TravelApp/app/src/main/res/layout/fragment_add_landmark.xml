<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="addLandmarkFragment"
            type="jwest.android_class.travel_app.AddLandmarkFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddLandmarkFragment">

        <!-- TODO: Update blank fragment layout -->

        <EditText
            android:id="@+id/landmarkTitleInput"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:ems="10"
            android:hint="Enter the name of the landmark"
            android:inputType="textPersonName"
            android:padding="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/landmarkDescriptionInput"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Enter the description of the landmark"
            android:inputType="textMultiLine"
            android:padding="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/landmarkRatingInput"
            android:layout_width="409dp"
            android:layout_height="58dp"
            android:layout_margin="20dp"
            android:ems="10"
            android:hint="Enter the rating you give this landmark"
            android:inputType="number"
            android:padding="20sp"
            app:layout_constraintBottom_toTopOf="@+id/addLandmarkSubmitButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5sp"
            android:text="Landmark Title"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="6dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:padding="5sp"
            android:text="Landmark Description"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/landmarkTitleInput"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:padding="5sp"
            android:text="You're Rating"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/landmarkDescriptionInput"
            tools:layout_editor_absoluteX="0dp" />

        <Button
            android:id="@+id/addLandmarkSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Add Landmark!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/landmarkRatingInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>